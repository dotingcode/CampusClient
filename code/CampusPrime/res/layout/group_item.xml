<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" 
    android:layout_height="fill_parent" android:background="#ff363636"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout   
        android:layout_width="fill_parent" android:layout_height="wrap_content">
        <FrameLayout android:id="@+id/gi_img_group" android:layout_width="60.0dip" android:layout_height="60.0dip" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_marginLeft="5dp" android:paddingRight="10dp">
            <ImageView android:id="@+id/gi_avatar" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="fitCenter" />
        </FrameLayout>
        <TextView android:textSize="22sp" android:textColor="#ffffffff" android:id="@+id/gi_name" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_toRightOf="@id/gi_img_group" android:layout_alignTop="@id/gi_img_group" />
        <TextView android:textSize="15sp" android:textColor="#ff999999" android:id="@+id/group_member" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@id/gi_img_group" android:layout_below="@id/gi_name" android:text="232个成员"/>
    </RelativeLayout>
</LinearLayout>

