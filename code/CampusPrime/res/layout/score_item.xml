<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/si_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"         
    android:background="@drawable/sel_score_list_item"
    >   
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dip"
    android:orientation="horizontal"
    >
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/si_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:paddingLeft="3dip"
		android:paddingRight="8dip"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:minWidth="26dip"
		android:textSize="15sp"
        android:textColor="#7d5886"
        android:textStyle="normal"/>
</RelativeLayout>

<View
    android:background="#ff19aba2"
    android:layout_width="1.2dip"
    android:layout_height="match_parent"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">
        <TextView
            android:id="@+id/si_course_name"
            android:layout_width="0dip"
            android:layout_weight="2.3"
            android:layout_height="wrap_content"
            android:paddingLeft="12dip"
			android:paddingRight="12dip"
			android:paddingTop="6dip"
			android:paddingBottom="6dip"  
			android:gravity="left"      
            android:layout_gravity="center_vertical"
            android:hint="null"
            android:textSize="18sp"
            android:textColor="#4c4c4c"
            android:singleLine="false"
            />

        <TextView
            android:id="@+id/si_course_type"
            android:layout_width="0dip"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:paddingTop="6dip"
			android:paddingBottom="6dip"    
            android:layout_gravity="center"       
            android:gravity="center"
            android:hint="null"
            android:textColor="#ff19aba2"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:weightSum="3">
        <TextView
            android:id="@+id/si_course_score"
            android:layout_width="0dip"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:paddingLeft="12dip"
			android:paddingRight="12dip"
			android:paddingTop="6dip"
			android:paddingBottom="6dip"         
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="null"
            android:textSize="15sp"
            android:textColor="#7D8471"
            android:singleLine="true"
            android:textStyle="italic" />
        <TextView
            android:id="@+id/si_course_ispass"
            android:layout_width="0dip"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:paddingTop="6dip"
			android:paddingBottom="6dip"    
            android:layout_gravity="center"       
            android:gravity="center"
            android:hint="null"
            android:textSize="15sp"
            android:textColor="#7D8471"
            android:textStyle="italic"  />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dip"
    android:background="#cccccc"/>
</LinearLayout>
