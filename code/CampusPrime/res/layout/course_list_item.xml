<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/sel_score_list_item"
    android:weightSum="5" >

<!-- column number -->    
<LinearLayout
    android:layout_width="0dip"
    android:layout_weight="0.5"
    android:layout_height="match_parent"
    android:background="#30ace0"
    >
    <TextView
        android:id="@+id/cdl_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="6dip"
        android:textSize="15sp"
        android:textColor="#f03e3a"
        android:gravity="center"
        android:hint="null"
        />
</LinearLayout>

<!-- divider -->
<View
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:background="@color/pocket_blue"/>

<!-- course name time place  -->
<LinearLayout
    android:layout_width="0dip"
    android:layout_weight="3.7"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

	<TextView
	    android:id="@+id/cdl_course_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="18sp"
	    android:paddingLeft="8dip"
	    android:paddingRight="8dip"
	    android:paddingTop="4dip"
	    android:paddingBottom="4dip"
	    android:textColor="#4c4c4c"
	    android:hint="null"/>
	<TextView
	    android:id="@+id/cdl_course_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="15sp"
	    android:paddingLeft="8dip"
	    android:paddingRight="8dip"
	    android:paddingTop="2dip"
	    android:paddingBottom="2dip"
	    android:textColor="#d7d7d7"
	    android:hint="null"/>
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="8dip"
	    android:paddingRight="4dip"
	    android:paddingTop="4dip"
	    android:paddingBottom="4dip"
	    android:orientation="horizontal"
	    >
		<TextView
		    android:id="@+id/cdl_place"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#303030"
		    android:textSize="15sp"
		    android:hint="null"/>
		<TextView
		     android:id="@+id/cdl_classroom"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="12dip"
		     android:textSize="15sp"
		     android:textColor="#303030"
		     android:hint="null"/>
	</LinearLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="0dip"
    android:layout_weight="0.8"
    android:layout_height="match_parent"
    >
    
</LinearLayout>
    
</LinearLayout>
