<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_listitem_layout" 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
 
 
    <ImageView android:id="@+id/ci_avatar"
        android:layout_width="40.0dip"
		android:layout_height="40.0dip"
		android:scaleType="fitCenter"
		android:padding="1.0dip"
        android:layout_margin="5dip"  />
 	
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    	android:background="@drawable/comment_card_bg"
        android:orientation="vertical"
        android:layout_marginRight="5dip">
         <RelativeLayout 
            android:id="@+id/ci_user" 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:paddingBottom="5dip"
        	android:layout_alignParentTop="true">
        
	        <TextView android:id="@+id/ci_username"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:textSize="14.0sp" 
				android:textColor="#ff433d3d"
	            android:layout_marginLeft="10dip"
	            android:layout_marginTop="4dip"
	            />
	      
	        <TextView android:id="@+id/ci_created"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="12.0sp" 
				android:textColor="#ffa3a1a3" 
				android:layout_below="@id/ci_username"
				android:layout_alignLeft="@id/ci_username"
				android:layout_marginBottom="5dip"
				/>
	        <ImageView
	            android:id="@+id/ci_reply_icon"
	            android:layout_height="13dip"
	            android:layout_width="13dip"
	            android:background="@drawable/sel_comment_reply"
	            android:layout_alignParentRight="true"
	            android:layout_centerInParent="true"
	            android:layout_marginRight="20dip"/>
	        <ImageView
	          android:visibility="invisible"
              android:id="@+id/ci_delete_icon"
              android:layout_width="13dip"
              android:layout_height="13dip"
	          android:background="@drawable/sel_comment_del"
	          android:layout_alignParentRight="true"
	          android:layout_centerInParent="true"
	          android:layout_marginRight="20dip"/>
		</RelativeLayout>
		<View
		    android:id="@+id/ci_divider"
		    android:background="#fff1f0f0"
		    android:layout_below="@id/ci_user"
		    android:layout_height="1.5dip"
		    android:layout_width="match_parent"/>
        <TextView android:id="@+id/ci_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ci_divider"
            android:layout_marginLeft="10dip"
            android:paddingBottom="7dip"
            android:textSize="14.0sp"
			android:textColor="#ff433d3d"
			android:paddingTop="7dip"/>
			
          
    </RelativeLayout>
 
</LinearLayout> 
</LinearLayout>