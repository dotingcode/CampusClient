<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"                 
    android:gravity = "center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/form_horizontal_padding"
    android:paddingRight="@dimen/form_horizontal_padding"
    android:paddingTop="@dimen/form_vertical_padding"
    android:paddingBottom="@dimen/form_vertical_padding"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"         
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4.0dip"
        android:layout_marginRight="4.0dip"
        >       
         <com.campus.prime.ui.view.ThemeImageView
              android:id="@+id/fge_avactar"
              android:layout_width="80.0dip"
              android:layout_height="80.0dip"
              android:clickable="true"
              android:focusable="true"
              android:focusableInTouchMode="true"                 
              android:background="@drawable/ic_avatar"
              />
               

                <com.campus.prime.ui.view.ThemeTextView
                    android:id="@+id/edit_user_avactar_prompt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@id/fge_avactar"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginLeft="10.0dip"
                   	android:text="点击头像进行编辑"
                    />
            
        
     		 </RelativeLayout>
      	    <com.campus.prime.ui.view.Header
	            android:paddingLeft="8.0dip"
	            android:paddingRight="12.0dip"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4.0dip"
	            android:layout_marginRight="4.0dip"
	            android:text="@string/general_label"
	            android:textSize="20dip"
	            style="@style/Header"
	            />
      	    
      	    <com.campus.prime.ui.view.LabelTextView
                android:id="@+id/fge_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textPersonName"
                android:hint="修改名称"
                android:editable="false"
            	style="@style/LabelText"
                />
      	    <com.campus.prime.ui.view.LabelTextView
                android:id="@+id/fge_type"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="修改类型"
                android:clickable="true"
            	style="@style/LabelText"
                />
      	    
      	    <com.campus.prime.ui.view.LabelTextView 
                android:id="@+id/fge_description"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="修改描述"
                android:clickable="true"
            	style="@style/LabelText"
                />
      	     	    
      	    <com.campus.prime.ui.view.Header
	            android:paddingLeft="8.0dip"
	            android:paddingRight="12.0dip"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4.0dip"
	            android:layout_marginRight="4.0dip"
	            android:text="Creation"
	            android:textSize="20dip"
	            style="@style/Header"
	            />
      	    <com.campus.prime.ui.view.LabelTextView
      	        android:id="@+id/fge_creator"
      	        android:layout_width="fill_parent"
      	        android:layout_height="wrap_content"
      	        android:hint="创建者"
      	        android:clickable="false"
      	        style="@style/LabelText"/>
      	    <com.campus.prime.ui.view.LabelTextView 
      	        android:id="@+id/fge_Location"	
      	        android:layout_width="fill_parent"
                android:layout_height="wrap_content"    
      	        android:hint="位置"
      	        android:clickable="false"
      	        style="@style/LabelText"/>
      	    
      	    
      	    <com.campus.prime.ui.view.Header
	            android:paddingLeft="8.0dip"
	            android:paddingRight="12.0dip"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="4.0dip"
	            android:layout_marginRight="4.0dip"
	            android:text="Infomaiton"
	            android:textSize="20.0dip"
	            style="@style/Header"
	            />
      	    <com.campus.prime.ui.view.LabelTextView 
                android:id="@+id/fge_information"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="修改公告"
                android:clickable="true"
            	style="@style/LabelText"
                />
      	    
      	    
            </LinearLayout>
