<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.campus.prime.ui.view.ObservableScrollView 
        android:id="@+id/au_scroll"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout 
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <RelativeLayout android:id="@+id/au_cover" 
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:background="#19aba2">
	            <ImageView android:id="@+id/au_avatar"
	                android:layout_centerHorizontal="true"
	                android:layout_marginTop="40dp"
	                android:layout_height="90dp"
	                android:layout_width="90dp"/>
	            <TextView android:id="@+id/au_nickname"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:layout_centerHorizontal="true"
	                android:layout_below="@id/au_avatar"
	                android:layout_marginTop="8dp"
	                android:textColor="#ffffff"
	                android:textSize="20sp"/>
			</RelativeLayout>
			<com.campus.prime.ui.indicator.TabPageIndicator
		        android:id="@+id/au_indicator"
		        android:layout_below="@id/au_cover"
		        android:layout_height="wrap_content"
		        android:layout_width="match_parent"
		        />
		    <android.support.v4.view.ViewPager
		        android:id="@+id/au_pager"
		        android:layout_below="@id/au_indicator"
		        android:layout_width="match_parent"
		        android:layout_height="470dp"/>
        </RelativeLayout>
    </com.campus.prime.ui.view.ObservableScrollView>
</RelativeLayout>
