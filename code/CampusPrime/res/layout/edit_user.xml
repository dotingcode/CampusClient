<!-- 更改头像 -->
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8.0dip"
    android:layout_marginRight="8.0dip"
    android:layout_marginLeft="8.0dip"
    android:padding="16dip" >
    <ImageView 
        android:id="@+id/fue_avatar"
        android:layout_height="74dip"
        android:layout_width="74dip"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"/>
     <ImageView
	    android:id="@+id/fue_change_avatar"
	    android:layout_width="90dip"
	    android:layout_height="90dip"
	    android:layout_gravity="center"
	    android:clickable="true"
	    android:background="@drawable/sel_head_select"/>
	   
</FrameLayout>


     
<!-- 姓名 性别  -->
<LinearLayout
    android:orientation="vertical" 
	android:background="@drawable/bg_shadow" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:layout_marginLeft="8.0dip" 
	android:layout_marginTop="8.0dip" 
	android:layout_marginRight="8.0dip">
<LinearLayout 
    android:id="@+id/fue_real_name_layout" 
    android:gravity="center_vertical"
    android:orientation="horizontal"   
	android:background="@drawable/sel_linearlayout_bg" 
	android:paddingLeft="12.0dip" 
	android:paddingRight="10.0dip" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:clickable="true"
	android:minHeight="42.0dip">
    <TextView 
        android:textSize="15.0sp" 
        android:textStyle="bold" 
        android:textColor="#ff4c4c4c" 
        android:text="姓名"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" />
